{
    "manifest_version": 2,
    "name": "Search Engine Switcher",
    "version": "1.0",
    "description": "Switch between search engines easily",
    "permissions": ["storage", "*://*/*"],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Search Engine Switcher"
    },
    "applications": {
      "gecko": {
        "id": "search-switcher@example.com"
      }
    }
  }